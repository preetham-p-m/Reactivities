{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Information"
        }
    },
    "ConnectionStrings": {
        "DefaultSqlLite": "Data Source=reactivities.db",
        "DefaultMySql": "Server=localhost;Port=3306;Uid=root;Database=reactivities"
    },
    "Serilog": {
        "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "../logs/activities-.log",
                    "rollingInterval": "Day",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} [{Level:u3}] {Username} {Message:lj}{NewLine}{Exception}]"
                }
            }
        ]
    },
    "TokenKey": "create_super_secret_token_key_using__keyedHashAlgorithm_of_512_bits"
}
